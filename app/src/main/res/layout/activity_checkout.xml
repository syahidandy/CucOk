<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkout"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorbar"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/vchrback1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_leftarrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:gravity="center"
            android:textColor="@color/colorPutih"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Barang"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:padding="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background = "#FFF08E"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiloan"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="Kaos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:text="10"
            android:textColor="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="54dp"
            android:text="Kemeja" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="100dp"
            android:text="4"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="74dp"
            android:text="* Khusus Kiloan, pakaian akan ditimbang saat driver CucOk tiba"
            android:textColor="#FF0000"
            android:textSize="10sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background = "#FFF08E"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satuan"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="Kaos"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:text="2"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="54dp"
            android:text="Kemeja"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="100dp"
            android:text="2"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp"
        android:text="Jenis Pewangi"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center">
        <TextView
            android:id="@+id/pwngi1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Lily Sweet"
            android:gravity="center"
            android:background="@drawable/ylwbg"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/pwngi2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bougenvile"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/pwngi3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Ocean"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center">
        <TextView
            android:id="@+id/pwngi4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Lavender"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/pwngi5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Sakura"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/pwngi6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Orchid"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center">
        <TextView
            android:id="@+id/pwngi7"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Vanilla"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/pwngi8"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Floral"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/pwngi9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/cucokin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:background="@drawable/ylwbbg"
            android:text="CucOkin Sekarang"
            android:textAllCaps="false"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#f15bb5"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>